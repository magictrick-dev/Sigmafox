
procedure touch_parameter param;
    while 1 < param;
        write 4 "Hello, world.";
    endwhile;
endprocedure;

function increment_numbers a b;

    variable result 4 := a + 1 + b + 1;
    increment_numbers := result;

endfunction;

function add_numbers a b;

    variable result 4 := a + b;
    add_numbers := result + increment_numbers(a, b);

endfunction;

function another_layer a b;

    variable result 4 := 0.0;

    while b < a;

        variable placeholder 4 := 0.0;
        placeholder := add_numbers(a + 1.0i, b);
        b := placeholder;

        touch_parameter a;

    endwhile;

    result := increment_numbers(b, a);

    another_layer := result;

endfunction;

procedure set_pi output;
    variable result 4 := add_numbers(0.14, 1.0);
    output := result;
endprocedure;

